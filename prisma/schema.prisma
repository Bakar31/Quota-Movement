generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ERole {
  Admin
  User
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          ERole     @default(User)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
